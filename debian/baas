# baas
#

description "baas service"
author      "auth0"
start on (local-filesystems and net-device-up IFACE=eth0)

stop on shutdown


respawn
respawn limit 5 5

console none

limit nofile 10000 10000

# Set DIR and NODE_PATH here, if not set in /etc/default
#DIR=""
#CONF_FILE=""
#NODE_PATH="/opt/iojs-v1.8.4-linux-x64/bin"
#export PATH=$NODE_PATH:$PATH

script
  # If default file, source it
  PORT=9485
  SALT=10
  CONFIG_FILE=/etc/baas.config

  [ -f /etc/default/baas_defaults ] && . /etc/default/baas_defaults

  exec start-stop-daemon \
    -d "/usr/bin" \
    --make-pidfile \
    --pidfile /var/run/$UPSTART_JOB.pid \
    --chuid baas \
    --start \
    --exec $NODE_PATH/node $DIR/bin/baas -- -p $PORT -s $SALT -c $CONFIG_FILE >> /var/log/baas.log 2>&1
end script

post-start script
  exec >> /var/log/baas.log 2>&1
  echo "`date`: starting $UPSTART_JOB"
end script

post-stop script
  exec >> /var/log/baas.log 2>&1
  echo "`date`: stopped $UPSTART_JOB"
end script


